game test;
canvas = 10, 10;

declare {
    float pos_x, pos_y;
}

func DoSomethingInt : int (int a, int b, int c) {
    return a + b - c;
}

func DoSomethingFloat : float (float num) {
    return num / 2;
}

func DoSomethingVoid : void () {
    pos_x = pos_x + 1;
    pos_y = pos_y - 1;
}

func Start : void () {    
    pos_x = DoSomethingInt(1, 2, 3) + 0.0;
    pos_y = DoSomethingFloat(10.0);
}

func Update : void () {
    declare {
        int num;
        float dec;
        bool is_fake;
    }

    Print("Hola Mundo");

    DoSomethingVoid();

    Print("Pon un numero");
    num = int(Read());
    dec = float(Read("Decimal pls: "));
    is_fake = bool("true");
    
    Print("Adios Mundo");
    Print();
}
